{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "lockFileMaintenance": {
    "automerge": true
  },
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackagePatterns": [
        "org.jetbrains.kotlin.*",
        "androidx.compose.*",
        "com.google.devtools.ksp",
        "composeOptions"
      ],
      "groupName": "Kotlin"
    }
  ]
}
